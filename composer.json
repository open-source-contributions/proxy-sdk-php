{
    "name": "redirectionio/proxy-sdk",
    "description": "PHP common code for redirection.io proxy",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Gr√©goire Pineau",
            "email": "lyrixx@lyrixx.info"
        },
        {
            "name": "Quentin Brunet",
            "email": "hello@quentinbrunet.com"
        },
        {
            "name": "redirection.io",
            "email": "support@redirection.io"
        }
    ],
    "require": {
        "psr/log": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.10",
        "symfony/phpunit-bridge": "^3.4@beta",
        "symfony/process": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "RedirectionIO\\Client\\Sdk\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "vendor/bin/simple-phpunit",
        "cs-fix": "vendor/bin/php-cs-fixer fix --config=.php_cs --dry-run --diff",
        "code-coverage": "vendor/bin/simple-phpunit --coverage-text --coverage-clover=coverage/coverage.xml --coverage-html=coverage/html"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    }
}
